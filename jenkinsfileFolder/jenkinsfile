pipeline {
    agent { label 'test' }
    
        environment {
        CI = 'true'
    }
    stages {
        try {
            stage('Install') {
                steps {
                    sh 'npm install'
                }
            }
            stage('Test') {
                steps {
                    sh 'npm test'
                }
            }
            stage('Build') {
                steps {
                    sh 'npm build'
                }
            }
        }
        catch (all){
            echo 'Something failed'
            // Send email notification
            emailext (
                subject:  "Test Failed",
                body:  "Something failed",
            // recipientProviders:  [[$class:  ]]
            )
            }
            

}
}



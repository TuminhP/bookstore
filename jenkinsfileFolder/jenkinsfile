pipeline {
    agent { label 'test' }
    
    environment {
        CI = 'true'
    }
    
    stages {
        stage('Install') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
        stage('Build') {
            steps {
                sh 'npm build'
            }
        }
    }    
    
    post {
//to call a freestyle Jenkins project which will merge and push to the master
        build 'develops project merge master'
        success {
            mail to: "phungttuminh@gmail.com", subject: "SUCCESS", body: "Build passed."
        }
        failure {
            mail to: "phungttuminh@gmail.com", subject: "FAILURE", body: "Build failed." 
        }
    }
            

}
//Test1



